.item-navigator {
    width: 200rpx;
    margin-right: 20rpx;
    display: inline-block;
    height: 336rpx;
}

.item-navigator .item-group {
    width: 100%;
    display: inline-block;
}

.item-group .thumbnail-group {
    width: 100%;
    height: 284rpx;
}

.thumbnail-group .thumbnail {
    width: 100%;
    height: 100%;
}

.item-group .item-title {
    font-size: 28rpx;
    text-align: center;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 100%;
    display: inline-block;
    height: 32rpx;
}