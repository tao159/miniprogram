.module-group {
    padding: 40rpx;
    background: #fff;
}

.module-group .module-top {
    font-size: 30rpx;
    display: flex;
    justify-content: space-between
}

.module-top .module-title {
    color: #494949;
}

.module-top .module-more {
    color: #41be57;
}

.module-scroll-view {
    margin-top: 40rpx;
    white-space: nowrap;
    display: flex;
}

.module-scroll-view .item-navigator {
    width: 200rpx;
    margin-right: 20rpx;
    display: inline-block;
    height: 336rpx;
}

.item-navigator .item-group {
    width: 100%;
    display: inline-block;
}

.item-group .thumbnail-group {
    width: 100%;
    height: 284rpx;
}

.thumbnail-group .thumbnail {
    width: 100%;
    height: 100%;
}

.item-group .item-title {
    font-size: 28rpx;
    text-align: center;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 100%;
    display: inline-block;
}

.module-scroll-view .item-navigator:last-of-type {
    margin-right: 0;
}